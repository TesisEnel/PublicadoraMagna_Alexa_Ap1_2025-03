@inherits LayoutComponentBase
@attribute [Authorize(Roles = "Administrador")]

<style>
    .bg-gradient-admin {
        background: linear-gradient(135deg, #2d5f4d 0%, #103713 100%);
    }

    .sidebar-admin {
        width: 250px;
        background: linear-gradient(180deg, #2d5f4d 0%, #103713 100%);
        min-height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }

    .main-content-admin {
        margin-left: 250px;
        min-height: 100vh;
    }

    .nav-link-admin {
        color: rgba(255, 255, 255, 0.8);
        padding: 12px 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        transition: all 0.3s;
        border-left: 3px solid transparent;
    }

        .nav-link-admin:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border-left-color: #e65100;
        }

        .nav-link-admin.active {
            background: rgba(255, 255, 255, 0.15);
            color: white;
            border-left-color: #e65100;
        }

    .admin-header {
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 16px 30px;
    }


            .sidebar-admin.show {
                transform: translateX(0);
            }

        .main-content-admin {
            margin-left: 0;
        }
    }
</style>

<div class="d-flex">

    <aside class="sidebar-admin text-white">
    
        <div class="p-4 border-bottom border-white border-opacity-10">
            <div class="d-flex align-items-center gap-3">
                <div class="bg-white bg-opacity-25 p-2 rounded-3">
                    <i class="bi bi-shield-check fs-3"></i>
                </div>
                <div>
                    <h5 class="mb-0 fw-bold">Admin Panel</h5>
                    <small class="opacity-75">Publicadora Magna</small>
                </div>
            </div>
        </div>
        <nav class="py-3">
            <ul class="list-unstyled">
                <li>
                    <a href="/admin/dashboard" class="nav-link-admin text-decoration-none">
                        <i class="bi bi-speedometer2 fs-5"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="px-3 py-2 mt-3">
                    <small class="text-white-50 fw-semibold">GESTIÓN</small>
                </li>

                <li>
                    <a href="/admin/usuarios" class="nav-link-admin text-decoration-none">
                        <i class="bi bi-people fs-5"></i>
                        <span>Usuarios</span>
                    </a>
                </li>

                <li>
                    <a href="/admin/periodistas" class="nav-link-admin text-decoration-none">
                        <i class="bi bi-person-badge fs-5"></i>
                        <span>Periodistas</span>
                    </a>
                </li>

                <li>
                    <a href="/admin/instituciones" class="nav-link-admin text-decoration-none">
                        <i class="bi bi-building fs-5"></i>
                        <span>Instituciones</span>
                    </a>
                </li>

                <li class="px-3 py-2 mt-3">
                    <small class="text-white-50 fw-semibold">CONTENIDO</small>
                </li>

                <li>
                    <a href="/articulos" class="nav-link-admin text-decoration-none">
                        <i class="bi bi-file-text fs-5"></i>
                        <span>Artículos</span>
                    </a>
                </li>

                <li>
                    <a href="/admin/categorias" class="nav-link-admin text-decoration-none">
                        <i class="bi bi-tags fs-5"></i>
                        <span>Categorías</span>
                    </a>
                </li>

                <li>
                    <a href="/admin/servicios-promocionales" class="nav-link-admin text-decoration-none">
                        <i class="bi bi-megaphone fs-5"></i>
                        <span>Servicios Promocionales</span>
                    </a>
                </li>

                <li class="px-3 py-2 mt-3">
                    <small class="text-white-50 fw-semibold">FINANZAS</small>
                </li>

                <li>
                    <a href="/pagos" class="nav-link-admin text-decoration-none">
                        <i class="bi bi-credit-card fs-5"></i>
                        <span>Pagos Instituciones</span>
                    </a>
                </li>

                <li>
                    <a href="/periodista/pagos" class="nav-link-admin text-decoration-none">
                        <i class="bi bi-wallet2 fs-5"></i>
                        <span>Pagos Periodistas</span>
                    </a>
                </li>

                <li class="px-3 py-2 mt-3">
                    <small class="text-white-50 fw-semibold">SISTEMA</small>
                </li>

                <li>
                    <a href="/admin/reportes" class="nav-link-admin text-decoration-none">
                        <i class="bi bi-graph-up fs-5"></i>
                        <span>Reportes</span>
                    </a>
                </li>

                <li>
                    <a href="/admin/configuracion" class="nav-link-admin text-decoration-none">
                        <i class="bi bi-gear fs-5"></i>
                        <span>Configuración</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- User Info -->
        <div class="position-absolute bottom-0 w-100 p-3 border-top border-white border-opacity-10">
            <div class="d-flex align-items-center gap-3 mb-3">
                <div class="bg-white bg-opacity-25 rounded-circle p-2">
                    <i class="bi bi-person-circle fs-4"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="fw-semibold small">Administrador</div>
                    <div class="text-white-50" style="font-size: 11px;">admin@magna.com</div>
                </div>
            </div>
            <a href="/Account/Logout" class="btn btn-outline-light btn-sm w-100">
                <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="main-content-admin flex-grow-1">
        <!-- Top Header -->
        <header class="admin-header d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-link d-md-none text-dark" onclick="document.querySelector('.sidebar-admin').classList.toggle('show')">
                    <i class="bi bi-list fs-3"></i>
                </button>
                <div>
                    <h5 class="mb-0">Panel de Administración</h5>
                    <small class="text-muted">Gestiona toda la plataforma</small>
                </div>
            </div>
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-outline-secondary btn-sm position-relative">
                    <i class="bi bi-bell"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 9px;">
                        5
                    </span>
                </button>
                <div class="vr"></div>
                <div class="text-end d-none d-md-block">
                    <div class="fw-semibold small">Administrador</div>
                    <div class="text-muted" style="font-size: 11px;">admin@magna.com</div>
                </div>
                <div class="bg-success bg-opacity-10 text-success rounded-circle p-2">
                    <i class="bi bi-person-circle fs-4"></i>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="p-4">
            @Body
        </main>

        <!-- Footer -->
        <footer class="bg-light border-top py-3">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start">
                        <small class="text-muted">&copy; 2025 Publicadora Magna. Todos los derechos reservados.</small>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <small class="text-muted">v1.0.0 | <a href="#" class="text-decoration-none">Soporte</a></small>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>
