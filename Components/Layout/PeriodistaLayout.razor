@using Microsoft.AspNetCore.Authorization
@inherits LayoutComponentBase
@attribute [Authorize(Roles = "Periodista")]

<style>
    .bg-gradient-periodista {
        background: linear-gradient(135deg, #2d5f4d 0%, #103713 100%);
    }

    .sidebar-periodista {
        width: 250px;
        background: linear-gradient(180deg, #2d5f4d 0%, #103713 100%);
        min-height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }

    .main-content-periodista {
        margin-left: 250px;
        min-height: 100vh;
    }

    .nav-link-periodista {
        color: rgba(255, 255, 255, 0.8);
        padding: 12px 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        transition: all 0.3s;
        border-left: 3px solid transparent;
    }

        .nav-link-periodista:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border-left-color: #c5e1a5; /* Verde claro al hover */
        }

        .nav-link-periodista.active {
            background: rgba(255, 255, 255, 0.15);
            color: white;
            border-left-color: #aed581; /* Verde activo */
        }

    .periodista-header {
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 16px 30px;
    }
</style>

<div class="d-flex">

    <aside class="sidebar-periodista text-white">
        <div class="p-4 border-bottom border-white border-opacity-10">
            <div class="d-flex align-items-center gap-3">
                <div class="bg-white bg-opacity-25 p-2 rounded-3">
                    <i class="bi bi-file-earmark-text fs-3"></i>
                </div>
                <div>
                    <h5 class="mb-0 fw-bold">Panel Periodista</h5>
                    <small class="opacity-75">Publicadora Magna</small>
                </div>
            </div>
        </div>
        <nav class="py-3">
            <ul class="list-unstyled">
                <li>
                    <a href="/periodista/dashboard" class="nav-link-periodista text-decoration-none">
                        <i class="bi bi-speedometer2 fs-5"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="/periodista/encargos" class="nav-link-periodista text-decoration-none">
                        <i class="bi bi-briefcase fs-5"></i>
                        <span>Encargos</span>
                    </a>
                </li>
                <li>
                    <a href="/periodista/articulos" class="nav-link-periodista text-decoration-none">
                        <i class="bi bi-file-text fs-5"></i>
                        <span>Mis Artículos</span>
                    </a>
                </li>
                <li>
                    <a href="/periodista/pagos" class="nav-link-periodista text-decoration-none">
                        <i class="bi bi-currency-dollar fs-5"></i>
                        <span>Pagos</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- User Info -->
        <div class="position-absolute bottom-0 w-100 p-3 border-top border-white border-opacity-10">
            <div class="d-flex align-items-center gap-3 mb-3">
                <div class="bg-white bg-opacity-25 rounded-circle p-2">
                    <i class="bi bi-person-circle fs-4"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="fw-semibold small">Periodista</div>
                    <div class="text-white-50" style="font-size: 11px;">periodista@magna.com</div>
                </div>
            </div>
            <a href="/Account/Logout" class="btn btn-outline-light btn-sm w-100">
                <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="main-content-periodista flex-grow-1">
        <!-- Top Header -->
        <header class="periodista-header d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-link d-md-none text-dark" onclick="document.querySelector('.sidebar-periodista').classList.toggle('show')">
                    <i class="bi bi-list fs-3"></i>
                </button>
                <div>
                    <h5 class="mb-0">Panel Periodista</h5>
                    <small class="text-muted">Gestiona tus artículos y encargos</small>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="p-4">
            @Body
        </main>

        <!-- Footer -->
        <footer class="bg-light border-top py-3 text-center">
            <small class="text-muted">&copy; 2025 Publicadora Magna</small>
        </footer>
    </div>
</div>
