@page "/categorias"
@layout AdminLayout
@using PublicadoraMagna.Model
@using PublicadoraMagna.Services
@inject CategoriaService categoriaService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Gestión de Categorías</PageTitle>

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-white rounded shadow-sm">
        <div>
            <h4 class="mb-0 fw-bold text-secondary">
                <i class="bi bi-folder-fill text-success me-2"></i>Gestión de Categorías <span class="badge bg-dark rounded-pill">Admin</span>
            </h4>
            <small class="text-muted">Administra las categorías de artículos y sus precios base</small>
        </div>
        <a href="/categorias/crear" class="btn btn-orange shadow-sm">
            <i class="bi bi-plus-lg"></i> Crear Categoría
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card stat-card bg-light-green shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted fw-bold">● Total Categorías</small>
                        <h2 class="mb-0 fw-bold">@listaCategorias.Count</h2>
                        <small class="text-muted">Activas en sistema</small>
                    </div>
                    <div class="stat-icon-box bg-gradient-green shadow">
                        <i class="bi bi-folder"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card bg-light-orange shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-danger fw-bold">● Precio Promedio</small>
                        <h2 class="mb-0 fw-bold text-danger">@precioPromedio.ToString("C0")</h2>
                        <small class="text-muted">Por categoría</small>
                    </div>
                    <div class="stat-icon-box bg-gradient-orange shadow">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card bg-light-green shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted fw-bold">● Precio Máximo</small>
                        <h2 class="mb-0 fw-bold">@precioMaximo.ToString("C0")</h2>
                        <small class="text-muted">Categoría premium</small>
                    </div>
                    <div class="stat-icon-box bg-gradient-green shadow">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card bg-light-orange shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-danger fw-bold">● Última Categoría</small>
                        <h5 class="mb-0 fw-bold text-danger">@(ultimaCategoria?.Nombre ?? "N/A")</h5>
                        <small class="text-muted">@(ultimaCategoria?.FechaCreacion.ToString("dd/MM/yyyy") ?? "--")</small>
                    </div>
                    <div class="stat-icon-box bg-gradient-orange shadow">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body p-2">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Buscar categorías..." @bind="filtro" @bind:event="oninput" />
                <button class="btn btn-outline-secondary" type="button" title="Limpiar filtro" @onclick="LimpiarFiltro">
                    <i class="bi bi-x-lg"></i>
                </button>
                <button class="btn btn-success" type="button">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold"><i class="bi bi-folder2-open me-2"></i>Listado de Categorías <span class="badge bg-dark ms-2">@CategoriasFiltradas.Count categorías</span></h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-header-custom">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Nombre</th>
                            <th>Precio Base</th>
                            <th>Fecha Creación</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!CategoriasFiltradas.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <i class="bi bi-inbox fs-1 text-muted"></i>
                                    <p class="text-muted mt-2">No se encontraron categorías</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var cat in CategoriasFiltradas)
                            {
                                <tr>
                                    <td>@cat.CategoriaId</td>
                                    <td> @cat.Nombre</td>
                                    <td><span class="badge bg-orange rounded-pill text-dark bg-opacity-10">@cat.PrecioBase.ToString("C")</span></td>
                                    <td class="text-muted">@cat.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                    <td class="text-end pe-4">
                                        <a href="/categorias/editar/@cat.CategoriaId" class="btn btn-sm btn-outline-success me-1" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <button class="btn btn-outline-danger btn-sm" @onclick="() => ConfirmarEliminar(cat.CategoriaId)" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Categoria> listaCategorias = new();
    private string filtro = "";
    private decimal precioPromedio => listaCategorias.Any() ? listaCategorias.Average(c => c.PrecioBase) : 0;
    private decimal precioMaximo => listaCategorias.Any() ? listaCategorias.Max(c => c.PrecioBase) : 0;
    private Categoria? ultimaCategoria => listaCategorias.OrderByDescending(c => c.FechaCreacion).FirstOrDefault();

    
    private List<Categoria> CategoriasFiltradas => string.IsNullOrWhiteSpace(filtro)
        ? listaCategorias
        : listaCategorias.Where(c => c.Nombre.Contains(filtro, StringComparison.OrdinalIgnoreCase)).ToList();

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        listaCategorias = await categoriaService.Listar();
    }

    private async Task ConfirmarEliminar(int id)
    {
        var eliminado = await categoriaService.Eliminar(id);
        if (eliminado)
        {
            await CargarDatos();
        }
    }
    private void LimpiarFiltro()
    {
        filtro = string.Empty;
    }
}
<style>
    .table-header-custom {
        background-color: #1a4231;
        color: white;
    }</style>
