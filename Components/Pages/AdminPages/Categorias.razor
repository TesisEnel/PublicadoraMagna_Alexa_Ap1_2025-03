@page "/categorias"
@rendermode InteractiveServer
@inject CategoriaService categoriaService
@inject IDbContextFactory<PublicadoraMagna.Data.ApplicationDbContext> DbFactory

<PageTitle>Gestión de Categorías</PageTitle>

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-tags"></i> Gestión de Categorías
            </h3>
        </div>
        <div class="card-body">
      
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>@(categoria.CategoriaId == 0 ? "Nueva Categoría" : "Editar Categoría")</h5>
                        </div>
                        <div class="card-body">
                            <EditForm Model="categoria" OnValidSubmit="Guardar">
                                <DataAnnotationsValidator />

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Nombre:</label>
                                            <InputText @bind-Value="categoria.Nombre" class="form-control" placeholder="Ej: Deportes, Política, etc." />
                                            <ValidationMessage For="@(() => categoria.Nombre)" />
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">Precio Base:</label>
                                            <InputNumber @bind-Value="categoria.PrecioBase" class="form-control" placeholder="0.00" />
                                            <ValidationMessage For="@(() => categoria.PrecioBase)" />
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-save"></i> Guardar
                                    </button>
                                    <button type="button" class="btn btn-secondary" @onclick="Nuevo">
                                        <i class="bi bi-file-earmark-plus"></i> Nuevo
                                    </button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>

       
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Listado de Categorías</h5>
                        </div>
                        <div class="card-body">
                            @if (categorias == null)
                            {
                                <div class="text-center">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Cargando...</span>
                                    </div>
                                </div>
                            }
                            else if (!categorias.Any())
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i> No hay categorías registradas
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover table-striped">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>ID</th>
                                                <th>Nombre</th>
                                                <th>Precio Base</th>
                                                <th>Fecha Creación</th>
                                                <th class="text-center">Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var cat in categorias)
                                            {
                                                <tr>
                                                    <td>@cat.CategoriaId</td>
                                                    <td>@cat.Nombre</td>
                                                    <td>@cat.PrecioBase.ToString("C")</td>
                                                    <td>@cat.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                                    <td class="text-center">
                                                        <button class="btn btn-sm btn-primary" @onclick="() => Seleccionar(cat)">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-danger" @onclick="async () => await Eliminar(cat.CategoriaId)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(mensaje))
            {
                <div class="alert alert-@tipoAlerta alert-dismissible fade show mt-3" role="alert">
                    @mensaje
                    <button type="button" class="btn-close" @onclick="() => mensaje = string.Empty"></button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Categoria> categorias = new();
    private Categoria categoria = new();
    private string mensaje = string.Empty;
    private string tipoAlerta = "info";

    protected override async Task OnInitializedAsync()
    {
        await Listar();
    }

    private async Task Listar()
    {
        using var contexto = await DbFactory.CreateDbContextAsync();
        categorias = await contexto.Categorias
            .OrderBy(c => c.Nombre)
            .ToListAsync();
    }

    private async Task Guardar()
    {
        try
        {
            var resultado = await categoriaService.Guardar(categoria);

            if (resultado)
            {
                await Listar();
                Nuevo();
                MostrarMensaje("Categoría guardada correctamente", "success");
            }
            else
            {
                MostrarMensaje("No se pudo guardar la categoría", "danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error: {ex.Message}", "danger");
        }
    }

    private void Nuevo()
    {
        categoria = new Categoria();
    }

    private void Seleccionar(Categoria cat)
    {
        categoria = new Categoria
        {
            CategoriaId = cat.CategoriaId,
            Nombre = cat.Nombre,
            PrecioBase = cat.PrecioBase,
            FechaCreacion = cat.FechaCreacion
        };
    }

    private async Task Eliminar(int id)
    {
        try
        {
            var resultado = await categoriaService.Eliminar(id);

            if (resultado)
            {
                await Listar();
                Nuevo();
                MostrarMensaje("Categoría eliminada correctamente", "success");
            }
            else
            {
                MostrarMensaje("No se pudo eliminar la categoría", "danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error: {ex.Message}", "danger");
        }
    }

    private void MostrarMensaje(string msg, string tipo)
    {
        mensaje = msg;
        tipoAlerta = tipo;
    }
}
