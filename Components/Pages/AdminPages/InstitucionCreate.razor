@page "/admin/instituciones/crear"
@page "/admin/instituciones/editar/{InstitucionId:int}"
@using PublicadoraMagna.Model
@using PublicadoraMagna.Services
@inject InstitucionService InstitucionService
@inject NavigationManager navigationManager
@rendermode InteractiveServer


<PageTitle>@(InstitucionId > 0 ? "Editar Institución" : "Crear Institución")</PageTitle>

<div class="container py-4">
    <div class="card shadow-lg">
        <div class="card-header text-center">
            <h3>@(InstitucionId > 0 ? "Editar Institución" : "Crear Nueva Institución")</h3>
        </div>

        <div class="card-body">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @errorMessage
                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = string.Empty)"></button>
                </div>
            }

            <div class="mb-4">
                <h5 class="border-bottom pb-2">Datos de la Institución</h5>
                
                <div class="mb-3">
                    <label class="form-label">Nombre de la Institución <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" @bind="institucion.Nombre" placeholder="Ej:UCNE" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">RNC</label>
                        <input type="text" class="form-control" @bind="institucion.Rnc" placeholder="Ej: 401-50002-3" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Teléfono</label>
                        <input type="text" class="form-control" @bind="institucion.Telefono" placeholder="Ej: 809-580-1962" />
                    </div>
                </div>

                @if (InstitucionId > 0)
                {
                    <div class="mb-3">
                        <label class="form-label">Email del Administrador</label>
                        <input type="email" class="form-control" @bind="institucion.EmailAdmin" />
                    </div>
                }
            </div>

            @if (InstitucionId == 0)
            {
                <div class="mb-4">
                    <h5 class="border-bottom pb-2">Datos del Administrador</h5>
                    
                    <div class="mb-3">
                        <label class="form-label">Nombre Completo <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="nombreAdmin" placeholder="Ej: Juan Carlos Pérez" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" @bind="emailAdmin" placeholder="Ej: admin@UCNE.edu.do" />
                        <small class="text-muted">Este email se usará para iniciar sesión</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Contraseña <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" @bind="password" />
                            <small class="text-muted">Mínimo 6 caracteres</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Confirmar Contraseña <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" @bind="confirmarPassword" />
                        </div>
                    </div>
                </div>
            }

            <small class="text-muted d-block mb-3">
                <span class="text-danger">*</span> Campos obligatorios
            </small>
        </div>

        <div class="card-footer text-center">
            <a href="/admin/instituciones" class="btn btn-secondary bi bi-arrow-left"> Volver</a>
            <button type="button" class="btn btn-primary bi bi-floppy" @onclick="Guardar"> Guardar</button>
            @if (InstitucionId > 0)
            {
                <button type="button" class="btn btn-danger bi bi-trash" @onclick="Eliminar"> Eliminar</button>
            }
        </div>
    </div>
</div>

@code {

    [Parameter] public int InstitucionId { get; set; }



    public Institucion institucion { get; set; } = new Institucion();
    public string nombreAdmin { get; set; }
    public string emailAdmin { get; set; }
    public string password { get; set; }
    public string confirmarPassword { get; set; }
    public string errorMessage { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (InstitucionId > 0)
        {
            institucion = await InstitucionService.Buscar(InstitucionId);
        }
        else
        {
            institucion = new Institucion();
        }
    }

    private async Task Guardar()
    {
        if (string.IsNullOrWhiteSpace(institucion.Nombre))
        {
            errorMessage = "El nombre de la institución es requerido";
            return;
        }

        if (InstitucionId > 0)
        {
          
            var guardado = await InstitucionService.Guardar(institucion);

            if (guardado)
            {
                navigationManager.NavigateTo("/admin/instituciones");
            }
            else
            {
                errorMessage = "No se pudo guardar correctamente";
            }
        }
        else
        {
          
            if (string.IsNullOrWhiteSpace(nombreAdmin))
            {
                errorMessage = "El nombre del administrador es requerido";
                return;
            }

            if (string.IsNullOrWhiteSpace(emailAdmin))
            {
                errorMessage = "El email del administrador es requerido";
                return;
            }

            if (string.IsNullOrWhiteSpace(password))
            {
                errorMessage = "La contraseña es requerida";
                return;
            }

            if (password != confirmarPassword)
            {
                errorMessage = "Las contraseñas no coinciden";
                return;
            }

            try
            {
            
                institucion.EmailAdmin = emailAdmin;
                institucion.CorreoContacto = emailAdmin;
                institucion.FechaRegistro = DateTime.Now;

                await InstitucionService.CrearConAdministrador(
                    institucion,
                    nombreAdmin,
                    emailAdmin,
                    password
                );

                navigationManager.NavigateTo("/admin/instituciones");
            }
            catch (Exception ex)
            {
                errorMessage = ex.Message;
            }
        }
    }

    private async Task Eliminar()
    {
        var eliminado = await InstitucionService.Eliminar(InstitucionId);

        if (eliminado)
        {
            navigationManager.NavigateTo("/admin/instituciones");
        }
        else
        {
            errorMessage = "No se pudo eliminar correctamente";
        }
    }
}
