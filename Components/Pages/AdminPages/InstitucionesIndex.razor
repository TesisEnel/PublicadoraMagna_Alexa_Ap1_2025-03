
@page "/admin/instituciones"
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]
@rendermode InteractiveServer
@inject InstitucionService InstitucionService
@inject NavigationManager Navigation

<PageTitle>Gestión de Instituciones</PageTitle>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-magna-dark"><i class="bi bi-building me-2"></i>Gestión de Instituciones</h2>
        <button class="btn btn-magna-orange shadow-sm" @onclick="IrACrear">
            <i class="bi bi-plus-circle"></i> Nueva Institución
        </button>
    </div>

    @if (cargando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-magna-dark" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card card-stat bg-magna-dark text-white shadow">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-building me-1"></i> Total Instituciones</h5>
                        <h2>@InstitucionesFiltradas.Count</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-stat bg-magna-orange text-white shadow">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-people me-1"></i> Usuarios Totales</h5>
                        <h2>@instituciones.Sum(i => i.Usuarios?.Count ?? 0)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-stat bg-magna-light-green shadow">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-file-earmark-text me-1"></i> Artículos Totales</h5>
                        <h2 class="text-magna-dark">@instituciones.Sum(i => i.Articulos?.Count ?? 0)</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-4 shadow-sm p-3">
            <div class="row g-2 align-items-end">
            
                <div class="col-md-4">
                    <label class="form-label fw-semibold small"><i class="bi bi-calendar me-1"></i>Desde</label>
                    <InputDate class="form-control" @bind-Value="fechaDesde" />
                </div>

               
                <div class="col-md-4">
                    <label class="form-label fw-semibold small"><i class="bi bi-calendar me-1"></i>Hasta</label>
                    <InputDate class="form-control" @bind-Value="fechaHasta" />
                </div>

            
                <div class="col-md-4">
                    <label class="form-label fw-semibold small"><i class="bi bi-search me-1"></i>Búsqueda</label>
                    <div class="input-group">
                        <input class="form-control" placeholder="Buscar por nombre, RNC o email..." @bind="terminoBusqueda" />
                        <button class="btn btn-magna-orange" @onclick="Buscar">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

 
        @if (!InstitucionesFiltradas.Any())
        {
            <div class="alert alert-info shadow-sm">
                <i class="bi bi-info-circle"></i> No hay instituciones que coincidan con los filtros aplicados.
            </div>
        }
        else
        {
            <div class="card shadow-sm border-0">
                <div class="card-header bg-magna-dark text-white">
                    <i class="bi bi-list-ul me-2"></i> Listado (Mostrando @InstitucionesFiltradas.Count)
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var institucion in InstitucionesFiltradas)
                        {
                            <div class="list-group-item border-bottom d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="fw-bold mb-1">@institucion.Nombre</h5>
                                    <small class="text-muted">RNC: @(string.IsNullOrEmpty(institucion.Rnc) ? "N/A" : institucion.Rnc) | Email: @institucion.EmailAdmin</small>
                                </div>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-outline-success" @onclick="() => VerDetalles(institucion.InstitucionId)"><i class="bi bi-eye"></i></button>
                                    <button class="btn btn-sm btn-outline-info" @onclick="() => GestionarUsuarios(institucion.InstitucionId)"><i class="bi bi-people"></i></button>
                                    <button class="btn btn-sm btn-outline-success" @onclick="() => Editar(institucion.InstitucionId)"><i class="bi bi-pencil"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private List<Institucion> instituciones = new();
    private string terminoBusqueda = string.Empty;
    private bool cargando = true;
    private DateTime? fechaDesde;
    private DateTime? fechaHasta;

    protected override async Task OnInitializedAsync()
    {
        await CargarInstituciones();
    }

    private async Task CargarInstituciones()
    {
        try
        {
            cargando = true;
            instituciones = await InstitucionService.Listar();
        }
        finally
        {
            cargando = false;
        }
    }

    private List<Institucion> InstitucionesFiltradas => instituciones
        .Where(i => string.IsNullOrWhiteSpace(terminoBusqueda)
                    || i.Nombre.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase)
                    || (!string.IsNullOrEmpty(i.Rnc) && i.Rnc.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase))
                    || (!string.IsNullOrEmpty(i.EmailAdmin) && i.EmailAdmin.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase)))
        .Where(i => !fechaDesde.HasValue || i.FechaRegistro >= fechaDesde.Value)
        .Where(i => !fechaHasta.HasValue || i.FechaRegistro <= fechaHasta.Value)
        .ToList();

    private void Buscar()
    {
        _ = InstitucionesFiltradas;
    }

    private void IrACrear() => Navigation.NavigateTo("/admin/instituciones/crear");
    private void VerDetalles(int id) => Navigation.NavigateTo($"/admin/instituciones/detalles/{id}");
    private void GestionarUsuarios(int id) => Navigation.NavigateTo($"/admin/instituciones/{id}/usuarios");
    private void Editar(int id) => Navigation.NavigateTo($"/admin/instituciones/editar/{id}");
}

