@page "/periodistas"
@rendermode InteractiveServer
@using PublicadoraMagna.Model
@using PublicadoraMagna.Services
@using Microsoft.EntityFrameworkCore
@inject PeriodistaService periodistaService
@inject IDbContextFactory<PublicadoraMagna.Data.ApplicationDbContext> DbFactory

<PageTitle>Gestión de Periodistas</PageTitle>

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-person-badge"></i> Gestión de Periodistas
            </h3>
        </div>
        <div class="card-body">
            <!-- Formulario -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>@(periodista.PeriodistaId == 0 ? "Nuevo Periodista" : "Editar Periodista")</h5>
                        </div>
                        <div class="card-body">
                            <EditForm Model="periodista" OnValidSubmit="Guardar">
                                <DataAnnotationsValidator />
                                
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label class="form-label">Nombres:</label>
                                            <InputText @bind-Value="periodista.Nombres" class="form-control" placeholder="Nombre completo del periodista" />
                                            <ValidationMessage For="@(() => periodista.Nombres)" />
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label class="form-label">Email:</label>
                                            <InputText @bind-Value="periodista.Email" class="form-control" type="email" placeholder="correo@ejemplo.com" />
                                            <ValidationMessage For="@(() => periodista.Email)" />
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label class="form-label">Tarifa Base:</label>
                                            <InputNumber @bind-Value="periodista.TarifaBase" class="form-control" placeholder="0.00" />
                                            <ValidationMessage For="@(() => periodista.TarifaBase)" />
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label class="form-label">Estado:</label>
                                            <div class="form-check form-switch mt-2">
                                                <InputCheckbox @bind-Value="periodista.EsActivo" class="form-check-input" id="esActivo" />
                                                <label class="form-check-label" for="esActivo">
                                                    @(periodista.EsActivo ? "Activo" : "Inactivo")
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-save"></i> Guardar
                                    </button>
                                    <button type="button" class="btn btn-secondary" @onclick="Nuevo">
                                        <i class="bi bi-file-earmark-plus"></i> Nuevo
                                    </button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tabla de Periodistas -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Listado de Periodistas</h5>
                        </div>
                        <div class="card-body">
                            @if (periodistas == null)
                            {
                                <div class="text-center">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Cargando...</span>
                                    </div>
                                </div>
                            }
                            else if (!periodistas.Any())
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i> No hay periodistas registrados
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover table-striped">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>ID</th>
                                                <th>Nombres</th>
                                                <th>Email</th>
                                                <th>Tarifa Base</th>
                                                <th>Estado</th>
                                                <th>Artículos</th>
                                                <th>Fecha Registro</th>
                                                <th class="text-center">Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var per in periodistas)
                                            {
                                                <tr>
                                                    <td>@per.PeriodistaId</td>
                                                    <td>@per.Nombres</td>
                                                    <td>@per.Email</td>
                                                    <td>@per.TarifaBase.ToString("C")</td>
                                                    <td>
                                                        @if (per.EsActivo)
                                                        {
                                                            <span class="badge bg-success">Activo</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">Inactivo</span>
                                                        }
                                                    </td>
                                                    <td>@per.Articulos.Count</td>
                                                    <td>@per.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                                    <td class="text-center">
                                                        <button class="btn btn-sm btn-primary" @onclick="() => Seleccionar(per)">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-danger" @onclick="async () => await Eliminar(per.PeriodistaId)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                        @if (per.EsActivo)
                                                        {
                                                            <button class="btn btn-sm btn-warning" @onclick="async () => await CambiarEstado(per.PeriodistaId, false)">
                                                                <i class="bi bi-x-circle"></i>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button class="btn btn-sm btn-success" @onclick="async () => await CambiarEstado(per.PeriodistaId, true)">
                                                                <i class="bi bi-check-circle"></i>
                                                            </button>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(mensaje))
            {
                <div class="alert alert-@tipoAlerta alert-dismissible fade show mt-3" role="alert">
                    @mensaje
                    <button type="button" class="btn-close" @onclick="() => mensaje = string.Empty"></button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Periodista> periodistas = new();
    private Periodista periodista = new();
    private string mensaje = string.Empty;
    private string tipoAlerta = "info";

    protected override async Task OnInitializedAsync()
    {
        await Listar();
    }

    private async Task Listar()
    {
        periodistas = await periodistaService.Listar();
    }

    private async Task Guardar()
    {
        try
        {
            var resultado = await periodistaService.Guardar(periodista);
            
            if (resultado)
            {
                await Listar();
                Nuevo();
                MostrarMensaje("Periodista guardado correctamente", "success");
            }
            else
            {
                MostrarMensaje("No se pudo guardar el periodista", "danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error: {ex.Message}", "danger");
        }
    }

    private void Nuevo()
    {
        periodista = new Periodista { EsActivo = true };
    }

    private void Seleccionar(Periodista per)
    {
        periodista = new Periodista
        {
            PeriodistaId = per.PeriodistaId,
            Nombres = per.Nombres,
            Email = per.Email,
            TarifaBase = per.TarifaBase,
            EsActivo = per.EsActivo,
            FechaRegistro = per.FechaRegistro
        };
    }

    private async Task Eliminar(int id)
    {
        try
        {
            var resultado = await periodistaService.Eliminar(id);
            
            if (resultado)
            {
                await Listar();
                Nuevo();
                MostrarMensaje("Periodista eliminado correctamente", "success");
            }
            else
            {
                MostrarMensaje("No se pudo eliminar el periodista", "danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error: {ex.Message}", "danger");
        }
    }

    private async Task CambiarEstado(int id, bool esActivo)
    {
        try
        {
            var resultado = await periodistaService.CambiarEstado(id, esActivo);
            
            if (resultado)
            {
                await Listar();
                MostrarMensaje($"Estado cambiado a {(esActivo ? "Activo" : "Inactivo")}", "success");
            }
            else
            {
                MostrarMensaje("No se pudo cambiar el estado", "danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error: {ex.Message}", "danger");
        }
    }

    private void MostrarMensaje(string msg, string tipo)
    {
        mensaje = msg;
        tipoAlerta = tipo;
    }
}
