@page "/articulos"
@rendermode InteractiveServer
@using PublicadoraMagna.Model
@using PublicadoraMagna.Services
@using Microsoft.EntityFrameworkCore
@inject ArticuloService articuloService
@inject IDbContextFactory<PublicadoraMagna.Data.ApplicationDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>Gestión de Artículos</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-0">Gestión de Artículos</h3>
            <p class="text-muted mb-0">Administra todos los artículos del sistema</p>
        </div>
        <button class="btn btn-primary" @onclick="IrACrear">
            <i class="bi bi-plus-circle"></i> Nuevo Artículo
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (articulos == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else if (!articulos.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-newspaper display-1 text-muted"></i>
                    <p class="text-muted mt-3">No hay artículos registrados</p>
                    <button class="btn btn-primary" @onclick="IrACrear">
                        <i class="bi bi-plus-circle"></i> Crear Primer Artículo
                    </button>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Título</th>
                                <th>Categoría</th>
                                <th>Autor</th>
                                <th>Estado</th>
                                <th>Tipo</th>
                                <th>Total</th>
                                <th>Fecha</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var art in articulos)
                            {
                                <tr>
                                    <td>
                                        <strong>@art.Titulo</strong>
                                    </td>
                                    <td>@art.Categoria?.Nombre</td>
                                    <td>
                                        @if (art.Periodista != null)
                                        {
                                            <span><i class="bi bi-person-circle"></i> @art.Periodista.Nombres</span>
                                        }
                                        else if (art.Institucion != null)
                                        {
                                            <span><i class="bi bi-building"></i> @art.Institucion.Nombre</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (art.Estado)
                                        {
                                            case EstadoArticulo.Borrador:
                                                <span class="badge bg-secondary">Borrador</span>
                                                break;
                                            case EstadoArticulo.Pendiente:
                                                <span class="badge bg-warning text-dark">Pendiente</span>
                                                break;
                                            case EstadoArticulo.Aprobado:
                                                <span class="badge bg-success">Aprobado</span>
                                                break;
                                            case EstadoArticulo.Rechazado:
                                                <span class="badge bg-danger">Rechazado</span>
                                                break;
                                            case EstadoArticulo.Enviado:
                                                <span class="badge bg-info">Publicado</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (art.EsLibre)
                                        {
                                            <span class="badge bg-primary">Libre</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-dark">Pagado</span>
                                        }
                                    </td>
                                    <td><strong>@art.TotalAPagar.ToString("C")</strong></td>
                                    <td>@art.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-sm btn-outline-primary" @onclick="() => IrAEditar(art.ArticuloId)" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            @if (art.Estado == EstadoArticulo.Pendiente)
                                            {
                                                <button class="btn btn-sm btn-outline-success" @onclick="async () => await CambiarEstado(art.ArticuloId, EstadoArticulo.Aprobado)" title="Aprobar">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            }
                                            <button class="btn btn-sm btn-outline-danger" @onclick="async () => await Eliminar(art.ArticuloId)" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(mensaje))
    {
        <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
            <div class="alert alert-@tipoAlerta alert-dismissible fade show" role="alert">
                @mensaje
                <button type="button" class="btn-close" @onclick="() => mensaje = string.Empty"></button>
            </div>
        </div>
    }
</div>

@code {
    private List<Articulo> articulos = new();
    private string mensaje = string.Empty;
    private string tipoAlerta = "info";

    protected override async Task OnInitializedAsync()
    {
        await Listar();
    }

    private async Task Listar()
    {
        using var contexto = await DbFactory.CreateDbContextAsync();
        articulos = await contexto.Articulos
            .Include(a => a.Categoria)
            .Include(a => a.Periodista)
            .Include(a => a.Institucion)
            .Include(a => a.ServiciosPromocionales)
                .ThenInclude(s => s.ServicioPromocional)
            .OrderByDescending(a => a.FechaCreacion)
            .ToListAsync();
    }

    private void IrACrear()
    {
        Navigation.NavigateTo("/articulos/create");
    }

    private void IrAEditar(int id)
    {
        Navigation.NavigateTo($"/articulos/edit/{id}");
    }

    private async Task Eliminar(int id)
    {
        try
        {
            var resultado = await articuloService.Eliminar(id);
            
            if (resultado)
            {
                await Listar();
                MostrarMensaje("Artículo eliminado correctamente", "success");
            }
            else
            {
                MostrarMensaje("No se pudo eliminar el artículo", "danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error: {ex.Message}", "danger");
        }
    }

    private async Task CambiarEstado(int id, EstadoArticulo nuevoEstado)
    {
        try
        {
            var resultado = await articuloService.CambiarEstado(id, nuevoEstado);
            
            if (resultado != null)
            {
                await Listar();
                MostrarMensaje($"Artículo {nuevoEstado}", "success");
            }
            else
            {
                MostrarMensaje("No se pudo cambiar el estado", "danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error: {ex.Message}", "danger");
        }
    }

    private void MostrarMensaje(string msg, string tipo)
    {
        mensaje = msg;
        tipoAlerta = tipo;
    }
}
