@page "/articulos/crear"
@page "/articulos/editar/{ArticuloId:int}"
@using Microsoft.AspNetCore.Identity
@inject ArticuloService ArticuloService
@inject CategoriaService CategoriaService
@inject PeriodistaService PeriodistaService
@inject ServicioPromocionalService ServicioPromocionalService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>@(ArticuloId > 0 ? "Editar Artículo" : "Crear Artículo")</PageTitle>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8">
            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @errorMessage
                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = string.Empty)"></button>
                </div>
            }
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-2 rounded me-3">
                            <i class="bi bi-file-text text-primary fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">Información Básica</h5>
                            <small class="text-muted">Datos principales del artículo</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Título del Artículo <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="articulo.Titulo" placeholder="Ingrese el título del artículo" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Categoría <span class="text-danger">*</span></label>
                        <select class="form-select" @bind="selectedCategoriaId">
                            <option value="0">-- Seleccione una categoría --</option>
                            @foreach (var categoria in listaCategorias)
                            {
                                <option value="@categoria.CategoriaId">@categoria.Nombre (RD$ @categoria.PrecioBase.ToString("N0"))</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Tipo de Artículo</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="esLibre" @bind="articulo.EsLibre">
                            <label class="form-check-label" for="esLibre">
                                Artículo Pagado
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            @if (esUsuarioInstitucion)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="alert alert-primary mb-0">
                            <i class="bi bi-building fs-5"></i>
                            <strong class="ms-2">Publicado por:</strong> @nombreInstitucion (Institución)
                            <br />
                            <small class="ms-4">Este artículo será publicado a nombre de tu institución</small>
                        </div>
                    </div>
                </div>
            }

            @if (esUsuarioPeriodista)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-person-check fs-5"></i>
                            <strong class="ms-2">Autor:</strong> @nombrePeriodista (Periodista)
                            <br />
                            <small class="ms-4">Este artículo será publicado a tu nombre</small>
                        </div>
                    </div>
                </div>
            }
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-2 rounded me-3">
                            <i class="bi bi-text-paragraph text-primary fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">Contenido del Artículo</h5>
                            <small class="text-muted">Redacción completa del artículo</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Contenido <span class="text-danger">*</span></label>
                        <textarea class="form-control" rows="10" @bind="articulo.Contenido" 
                                  placeholder="Escriba el contenido completo del artículo..."></textarea>
                    </div>
                </div>
            </div>
            @if (!esUsuarioPeriodista)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-warning bg-opacity-10 p-2 rounded me-3">
                                <i class="bi bi-megaphone text-warning fs-4"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">Servicios Promocionales</h5>
                                <small class="text-muted">Opcional - Aumenta la visibilidad del artículo</small>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(errorServicio))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @errorServicio
                                <button type="button" class="btn-close" @onclick="@(() => errorServicio = string.Empty)"></button>
                            </div>
                        }

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label class="form-label fw-semibold">Servicio</label>
                                <select class="form-select" @bind="servicioSeleccionadoId">
                                    <option value="0">Seleccione un servicio</option>
                                    @foreach (var servicio in listaServiciosPromocionales)
                                    {
                                        <option value="@servicio.ServicioPromocionalId">@servicio.Nombre - RD$ @servicio.Precio.ToString("N0")</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <button type="button" class="btn btn-primary w-100" @onclick="AgregarServicio">
                                    <i class="bi bi-plus-circle"></i> Agregar
                                </button>
                            </div>
                        </div>

                        @if (articulo.ServiciosPromocionales.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Servicio</th>
                                            <th class="text-end">Precio</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detalle in articulo.ServiciosPromocionales)
                                        {
                                            var servicio = listaServiciosPromocionales.FirstOrDefault(s => s.ServicioPromocionalId == detalle.ServicioPromocionalId);
                                            <tr>
                                                <td>@(servicio?.Nombre ?? "N/A")</td>
                                                <td class="text-end">RD$ @detalle.PrecioAplicado.ToString("N0")</td>
                                                <td class="text-end">
                                                    <button type="button" class="btn btn-sm btn-danger" @onclick="() => EliminarServicio(detalle)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            }
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 p-2 rounded me-3">
                            <i class="bi bi-image text-info fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">Imágenes</h5>
                            <small class="text-muted">Opcional - Agregar imágenes al artículo</small>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <input type="text" class="form-control" @bind="nuevaImagen" placeholder="URL de la imagen" />
                        <button class="btn btn-outline-primary" type="button" @onclick="AgregarImagen">
                            <i class="bi bi-plus-circle"></i> Agregar
                        </button>
                    </div>

                    @if (articulo.Imagenes.Any())
                    {
                        <div class="list-group">
                            @foreach (var imagen in articulo.Imagenes)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <small class="text-truncate">@imagen</small>
                                    <button type="button" class="btn btn-sm btn-danger" @onclick="@(() => EliminarImagen(imagen))">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

        </div>
        <div class="col-lg-4">
            <div class="card mb-4 sticky-top" style="top: 20px;">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success bg-opacity-10 p-2 rounded me-3">
                            <i class="bi bi-currency-dollar text-success fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">Resumen de Costos</h5>
                        </div>
                    </div>

                    @if (esUsuarioPeriodista)
                    {
                        <div class="alert alert-success">
                            <h6 class="alert-heading">
                                <i class="bi bi-check-circle"></i> ¡Publicación Gratuita!
                            </h6>
                            <p class="mb-2">Como periodista, publica sin costo alguno.</p>
                            <hr />
                            <p class="mb-0">
                                <i class="bi bi-cash-coin"></i>
                                <strong>Ganancia por aprobación:</strong> 45% del precio base de la categoría
                            </p>
                            @if (precioBase > 0)
                            {
                                <p class="mb-0 mt-2">
                                    <small class="text-muted">Categoría @categoriaNombre (RD$ @precioBase.ToString("N0"))</small><br />
                                    <strong class="text-success fs-5">Recibirás: RD$ @((precioBase * 0.45m).ToString("N0"))</strong>
                                </p>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="border-bottom pb-2 mb-2">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <i class="bi bi-tag"></i>
                                    <span class="ms-1">Precio Base</span>
                                </div>
                                <strong class="@(precioBase > 0 ? "text-dark" : "text-muted")">
                                    @(precioBase > 0 ? $"RD$ {precioBase:N0}" : "$0.00")
                                </strong>
                            </div>
                            @if (precioBase == 0)
                            {
                                <small class="text-muted d-block">No seleccionada</small>
                            }
                            else
                            {
                                <small class="text-muted d-block">@categoriaNombre</small>
                            }
                        </div>

                        @if (totalServicios > 0)
                        {
                            <div class="border-bottom pb-2 mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-megaphone"></i>
                                        <span class="ms-1">Servicios Promocionales</span>
                                    </div>
                                    <strong>RD$ @totalServicios.ToString("N0")</strong>
                                </div>
                            </div>
                        }

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div>
                                <i class="bi bi-calculator"></i>
                                <span class="ms-1 fw-bold">Total a Pagar</span>
                            </div>
                            <h4 class="mb-0 text-primary">RD$ @((precioBase + totalServicios).ToString("N0"))</h4>
                        </div>
                    }

                    <hr />

                    <div class="alert @(esUsuarioPeriodista ? "alert-info" : "alert-warning") py-2 mb-0">
                        <small>
                            <i class="bi bi-info-circle"></i>
                            <strong>Estado:</strong> @(esUsuarioPeriodista ? "Pendiente de aprobación del editor" : "Pendiente de pago")
                        </small>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h6 class="mb-3">Acciones</h6>
                    
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-primary" @onclick="@(() => Guardar(EstadoArticulo.Borrador))">
                            <i class="bi bi-download"></i> Guardar Borrador
                        </button>
                        <button type="button" class="btn btn-success" @onclick="@(() => Guardar(EstadoArticulo.Pendiente))">
                            <i class="bi bi-send"></i> Enviar para Revisión
                        </button>
                        <a href="/articulos" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@code {
    [Parameter] public int ArticuloId { get; set; }
    [CascadingParameter] private Task<AuthenticationState>? authenticationStateTask { get; set; }

    private Articulo articulo = new();
    private List<Categoria> listaCategorias = new();
    private List<Periodista> listaPeriodistas = new();
    private List<ServicioPromocional> listaServiciosPromocionales = new();
    
    private string errorMessage = string.Empty;
    private string errorServicio = string.Empty;
    private string nuevaImagen = string.Empty;
    private int servicioSeleccionadoId = 0;
    
    private bool esUsuarioInstitucion;
    private bool esUsuarioPeriodista;
    private int institucionIdActual;
    private int periodistaIdActual;
    private string nombreInstitucion = string.Empty;
    private string nombrePeriodista = string.Empty;

    private decimal precioBase;
    private decimal totalServicios;
    private decimal tarifaPeriodista;
    private string categoriaNombre = string.Empty;

    private int selectedCategoriaId
    {
        get => articulo.CategoriaId;
        set
        {
            articulo.CategoriaId = value;
            RecalcularTotales();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        listaCategorias = await CategoriaService.Listar();
        listaPeriodistas = await PeriodistaService.Listar();
        listaServiciosPromocionales = await ServicioPromocionalService.Listar();

        if (authenticationStateTask != null)
        {
            var authState = await authenticationStateTask;
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                esUsuarioInstitucion = user.IsInRole(AppRoles.AdminInstitucion) || user.IsInRole(AppRoles.RedactorInstitucion);
                esUsuarioPeriodista = user.IsInRole(AppRoles.Periodista);

                if (esUsuarioInstitucion)
                {
                    await CargarDatosInstitucion(user);
                }
                else if (esUsuarioPeriodista)
                {
                    await CargarDatosPeriodista(user);
                }
            }
        }

        if (ArticuloId > 0)
        {
            articulo = await ArticuloService.GetArticuloCompleto(ArticuloId) ?? new Articulo();
        }
    }

    private async Task CargarDatosInstitucion(ClaimsPrincipal user)
    {
        var institucionIdClaim = user.FindFirst("InstitucionId");
    if (institucionIdClaim != null && int.TryParse(institucionIdClaim.Value, out int instId))
    {
        institucionIdActual = instId;
    }
    else
    {
    
        var email = user.FindFirst(ClaimTypes.Email)?.Value;
        if (!string.IsNullOrEmpty(email))
        {
            var appUser = await UserManager.FindByEmailAsync(email);
            if (appUser?.InstitucionId != null)
            {
                institucionIdActual = appUser.InstitucionId.Value;
            }
        }
    }

    nombreInstitucion = user.FindFirst(ClaimTypes.Name)?.Value ?? "Institución";
}
    

    private async Task CargarDatosPeriodista(ClaimsPrincipal user)
    {
       
        var periodistaIdClaim = user.FindFirst("PeriodistaId");
        if (periodistaIdClaim != null && int.TryParse(periodistaIdClaim.Value, out int perId))
        {
            periodistaIdActual = perId;
        }
        else
        {
           
            var email = user.FindFirst(ClaimTypes.Email)?.Value;
            if (!string.IsNullOrEmpty(email))
            {
                var appUser = await UserManager.FindByEmailAsync(email);
                if (appUser?.PeriodistaId != null)
                {
                    periodistaIdActual = appUser.PeriodistaId.Value;
                }
            }
        }

     
        if (periodistaIdActual > 0)
        {
            var periodista = await PeriodistaService.Buscar(periodistaIdActual);
            if (periodista != null)
            {
                tarifaPeriodista = periodista.TarifaBase;
                nombrePeriodista = periodista.Nombres;
            }
        }

        articulo.EsLibre = true;
        articulo.PeriodistaId = periodistaIdActual;
    }

    private void AgregarServicio()
    {
        if (servicioSeleccionadoId <= 0)
        {
            errorServicio = "Debe seleccionar un servicio";
            return;
        }

        var servicio = listaServiciosPromocionales.FirstOrDefault(s => s.ServicioPromocionalId == servicioSeleccionadoId);
        if (servicio == null)
        {
            errorServicio = "Servicio no encontrado";
            return;
        }

        if (articulo.ServiciosPromocionales.Any(s => s.ServicioPromocionalId == servicioSeleccionadoId))
        {
            errorServicio = "Este servicio ya ha sido agregado";
            return;
        }

        articulo.ServiciosPromocionales.Add(new ArticuloServicioPromocionales
        {
            ServicioPromocionalId = servicioSeleccionadoId,
            PrecioAplicado = servicio.Precio,
            FechaAplicacion = DateTime.Now
        });

        servicioSeleccionadoId = 0;
        errorServicio = string.Empty;
        RecalcularTotales();
    }

    private void EliminarServicio(ArticuloServicioPromocionales servicio)
    {
        articulo.ServiciosPromocionales.Remove(servicio);
        RecalcularTotales();
    }

    private void AgregarImagen()
    {
        if (!string.IsNullOrWhiteSpace(nuevaImagen))
        {
            articulo.Imagenes.Add(nuevaImagen);
            nuevaImagen = string.Empty;
        }
    }

    private void EliminarImagen(string imagen) => articulo.Imagenes.Remove(imagen);

    private void RecalcularTotales()
    {
        var categoria = listaCategorias.FirstOrDefault(c => c.CategoriaId == articulo.CategoriaId);
        precioBase = categoria?.PrecioBase ?? 0;
        categoriaNombre = categoria?.Nombre ?? "Sin categoría";

        totalServicios = articulo.ServiciosPromocionales.Sum(s => s.PrecioAplicado);
        tarifaPeriodista = 0;
    }

    private async Task Guardar(EstadoArticulo estado)
    {
      
        if (string.IsNullOrWhiteSpace(articulo.Titulo))
        {
            errorMessage = "El título es requerido";
            return;
        }

        if (articulo.CategoriaId == 0)
        {
            errorMessage = "Debe seleccionar una categoría";
            return;
        }

        if (string.IsNullOrWhiteSpace(articulo.Contenido))
        {
            errorMessage = "El contenido es requerido";
            return;
        }

        try
        {
           
            articulo.Resumen = articulo.Contenido.Length > 200 
                ? articulo.Contenido.Substring(0, 200) + "..." 
                : articulo.Contenido;

            articulo.Estado = estado;

          
            if (esUsuarioInstitucion)
            {
                articulo.InstitucionId = institucionIdActual;
                articulo.PeriodistaId = null;
            }
            else if (esUsuarioPeriodista)
            {
                articulo.PeriodistaId = periodistaIdActual;
                articulo.InstitucionId = null;
            }

            var guardado = await ArticuloService.Guardar(articulo);

            if (guardado)
            {
                navigationManager.NavigateTo("/articulos");
            }
            else
            {
                errorMessage = "No se pudo guardar el artículo";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al guardar: {ex.Message}";
        }
    }
}
