         background: linear-gradient(135deg, #2d5f4d 0%, #103713 100%);
     }

     .bg-gradient-orange {
         background: linear-gradient(135deg, #ff6b35 0%, #e65100 100%);
     }

     .border-orange-hover:hover {
         border-color: #e65100 !important;
     }

     .btn-orange {
         background-color: #e65100;
         color: white;
         border: none;
     }

         .btn-orange:hover {
             background-color: #bf360c;
             color: white;
         }

     .service-item {
         background: #f8f9fa;
         border-radius: 8px;
         padding: 12px 16px;
         margin-bottom: 8px;
     }
</style>