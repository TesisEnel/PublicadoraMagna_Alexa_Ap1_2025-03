@page "/editor/articulos"
@attribute [Authorize(Roles = "Admin,Editor")] 
@inject ArticuloService ArticuloService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Artículos Pendientes - Editor</PageTitle>
<div class="bg-gradient-green text-white py-4 mb-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <div class="bg-white bg-opacity-25 rounded p-2 me-3">
                    <i class="bi bi-inbox fs-3"></i>
                </div>
                <div>
                    <h1 class="h3 fw-bold mb-0">Panel del Editor</h1>
                    <small class="opacity-75">Gestiona los envíos de artículos</small>
                </div>
            </div>
            <div>
                <span class="badge bg-white bg-opacity-25 px-3 py-2">
                    <i class="bi bi-clock me-1"></i>@articulosPendientes.Count pendientes
                </span>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm bg-gradient-orange text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 opacity-75">Pendientes</h6>
                            <h2 class="mb-0 fw-bold">@articulosPendientes.Count</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-clock fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 opacity-75">Aprobados</h6>
                            <h2 class="mb-0 fw-bold">0</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-check-circle fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-muted">Rechazados</h6>
                            <h2 class="mb-0 fw-bold">0</h2>
                        </div>
                        <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-3">
                            <i class="bi bi-x-circle fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!articulosPendientes.Any())
    {
        <div class="alert alert-info border-0 shadow-sm">
            <i class="bi bi-info-circle me-2"></i>No hay artículos pendientes de aprobación
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="p-3 border-bottom">
                    <h6 class="mb-0 text-muted">Envíos de Artículos</h6>
                </div>

                <div class="p-3">
                    @foreach (var articulo in articulosPendientes)
                    {
                        <div class="card mb-3 border border-orange-hover">
                            <div class="card-body">
                                <div class="d-flex align-items-start mb-3">
                                    <div class="bg-success bg-opacity-10 text-success rounded p-2 me-3">
                                        <i class="bi bi-file-text fs-4"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="mb-2 fw-bold">@articulo.Titulo</h5>
                                        <div class="mb-2">
                                            @if (articulo.Categoria != null)
                                            {
                                                <span class="badge bg-success bg-opacity-10 text-success me-2">@articulo.Categoria.Nombre</span>
                                            }
                                            <span class="badge" style="background: #fff3e0; color: #e65100;">Pendiente</span>
                                        </div>
                                        <p class="text-muted mb-2">@articulo.Resumen</p>
                                        <div class="d-flex gap-3 text-muted small">
                                            @if (articulo.PeriodistaId.HasValue)
                                            {
                                                <span><i class="bi bi-person me-1"></i>@articulo.Periodista?.Nombres</span>
                                            }
                                            @if (articulo.InstitucionId.HasValue)
                                            {
                                                <span><i class="bi bi-building me-1"></i>@articulo.Institucion?.Nombre</span>
                                            }
                                            @if (articulo.FechaEnvio.HasValue)
                                            {
                                                <span><i class="bi bi-calendar me-1"></i>@articulo.FechaEnvio.Value.ToString("dd 'de' MMMM 'de' yyyy")</span>
                                            }
                                            <span><i class="bi bi-file-text me-1"></i>@(articulo.Contenido?.Split(' ').Length ?? 0) palabras</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex gap-2 justify-content-end">
                                    <button class="btn btn-sm btn-success" @onclick="() => Aprobar(articulo.ArticuloId)">
                                        <i class="bi bi-check-circle me-1"></i>Aprobar
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => Rechazar(articulo.ArticuloId)">
                                        <i class="bi bi-x-circle me-1"></i>Rechazar
                                    </button>
                                    <button class="btn btn-sm btn-orange" @onclick="() => VerDetalle(articulo.ArticuloId)">
                                        <i class="bi bi-eye me-1"></i>Ver completo
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@if (articuloSeleccionado != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header border-0">
                    <h4 class="fw-bold mb-0">@articuloSeleccionado.Titulo</h4>
                    <button type="button" class="btn-close" @onclick="CerrarModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <div class="text-muted small mb-1">Autor</div>
                            <div>
                                <i class="bi bi-person me-1"></i>
                                @if (articuloSeleccionado.PeriodistaId.HasValue)
                                {
                                    @articuloSeleccionado.Periodista?.Nombres
                                }
                                else if (articuloSeleccionado.InstitucionId.HasValue)
                                {
                                    @articuloSeleccionado.Institucion?.Nombre
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="text-muted small mb-1">Categoría</div>
                            <div>
                                @if (articuloSeleccionado.Categoria != null)
                                {
                                    <span class="badge bg-success text-white px-3 py-2 rounded-pill">@articuloSeleccionado.Categoria.Nombre</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="text-muted small mb-1">Fecha de envío</div>
                            <div>
                                <i class="bi bi-calendar me-1"></i>
                                @if (articuloSeleccionado.FechaEnvio.HasValue)
                                {
                                    @articuloSeleccionado.FechaEnvio.Value.ToString("dd 'de' MMMM 'de' yyyy")
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="text-muted small mb-1">Palabras</div>
                            <div>
                                <i class="bi bi-file-text me-1"></i>
                                @(articuloSeleccionado.Contenido?.Split(' ').Length ?? 0) palabras
                            </div>
                        </div>
                    </div>
                    @if (articuloSeleccionado.ServiciosPromocionales != null && articuloSeleccionado.ServiciosPromocionales.Any())
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Servicios Promocionales Incluidos</h6>
                            @foreach (var servicio in articuloSeleccionado.ServiciosPromocionales)
                            {
                                <div class="service-item">
                                    <i class="bi bi-circle-fill me-2" style="color: #e65100; font-size: 8px;"></i>
                                    @servicio.ServicioPromocional?.Nombre
                                </div>
                            }
                        </div>
                    }
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">Contenido del Artículo</h6>
                        <div style="line-height: 1.8; text-align: justify;">
                            @articuloSeleccionado.Contenido
                        </div>
                    </div>
                    @if (articuloSeleccionado.Imagenes.Any())
                    {
                        <div class="mb-3">
                            <h6 class="fw-bold mb-3">Imágenes Adjuntas</h6>
                            @foreach (var img in articuloSeleccionado.Imagenes)
                            {
                                <div class="d-flex align-items-center justify-content-between p-3 mb-2 border rounded">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-image fs-4 me-3 text-muted"></i>
                                        <div>
                                            <div>@Path.GetFileName(img)</div>
                                            <small class="text-muted">1920 x 1080 px • 2.4 MB</small>
                                        </div>
                                    </div>
                                    <a href="@img" target="_blank" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-eye me-1"></i>Ver
                                    </a>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Articulo> articulosPendientes = new();
    private Articulo? articuloSeleccionado;

    protected override async Task OnInitializedAsync()
    {
        await CargarArticulosPendientes();
    }

    private async Task CargarArticulosPendientes()
    {
        articulosPendientes = await ArticuloService.ListarPorEstado(EstadoArticulo.Pendiente);
    }

    private async Task VerDetalle(int articuloId)
    {
        articuloSeleccionado = await ArticuloService.GetArticuloCompleto(articuloId);
    }

    private void CerrarModal()
    {
        articuloSeleccionado = null;
    }

    private async Task Aprobar(int articuloId)
    {
        var resultado = await ArticuloService.CambiarEstado(
            articuloId,
            EstadoArticulo.AprobadoEditor,
            null
        );

        if (resultado != null)
        {
            await CargarArticulosPendientes();
        }
    }

    private async Task Rechazar(int articuloId)
    {
        var resultado = await ArticuloService.CambiarEstado(
            articuloId,
            EstadoArticulo.Rechazado,
            null
        );

        if (resultado != null)
        {
            await CargarArticulosPendientes();
        }
    }
}
