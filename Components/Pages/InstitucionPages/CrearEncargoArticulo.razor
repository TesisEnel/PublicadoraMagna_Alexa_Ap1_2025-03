@page "/institucion/encargos/crear"
@* @attribute [Authorize(Roles = "AdminInstitucion,RedactorInstitucion")] *@
@using Microsoft.AspNetCore.Identity
@layout InstitucionLayout
@inject EncargoArticuloService EncargoService
@inject CategoriaService CategoriaService
@inject PeriodistaService PeriodistaService
@inject ServicioPromocionalService ServicioPromocionalService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Crear Encargo</PageTitle>

<div class="page-header text-white py-4 mb-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 fw-bold mb-0">
                    <i class="bi bi-file-earmark-text me-2"></i>
                    Crear Encargo de Artículo
                </h1>
            </div>
            <div>
                <a href="/institucion/encargos" class="text-white text-decoration-none opacity-75">
                    <i class="bi bi-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = string.Empty)"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="section-header">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle fs-4 me-3"></i>
                        <div>
                            <h5 class="mb-0 fw-bold">Datos del Encargo</h5>
                            <small class="opacity-75">Información que recibirá el periodista</small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Título Sugerido <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="encargo.TituloSugerido" placeholder="Título del artículo" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Descripción del Encargo</label>
                        <textarea class="form-control" rows="4" @bind="encargo.DescripcionEncargo"
                                  placeholder="Describe lo que necesitas en el artículo, enfoque, puntos a cubrir, etc."></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Categoría <span class="text-danger">*</span></label>
                        <select class="form-select" @bind="selectedCategoriaId">
                            <option value="0">-- Seleccione una categoría --</option>
                            @foreach (var categoria in listaCategorias)
                            {
                                <option value="@categoria.CategoriaId">@categoria.Nombre (RD$ @categoria.PrecioBase.ToString("N0"))</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Periodista <span class="text-danger">*</span></label>
                        <select class="form-select" @bind="selectedPeriodistaId">
                            <option value="0">-- Seleccione un periodista --</option>
                            @foreach (var periodista in listaPeriodistas.Where(p => p.EsActivo))
                            {
                                <option value="@periodista.PeriodistaId">@periodista.Nombres (Tarifa: RD$ @periodista.TarifaBase.ToString("N0"))</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="card border-0 shadow-sm mb-4">
                <div class="section-header">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-megaphone fs-4 me-3"></i>
                        <div>
                            <h5 class="mb-0 fw-bold">Servicios Promocionales</h5>
                            <small class="opacity-75">Opcional - Servicios adicionales para el artículo</small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label class="form-label fw-semibold">Servicio</label>
                            <select class="form-select" @bind="servicioSeleccionadoId">
                                <option value="0">Seleccione un servicio</option>
                                @foreach (var servicio in listaServiciosPromocionales)
                                {
                                    <option value="@servicio.ServicioPromocionalId">@servicio.Nombre - RD$ @servicio.Precio.ToString("N0")</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="button" class="btn btn-orange w-100" @onclick="AgregarServicio">
                                <i class="bi bi-plus-circle me-2"></i>Agregar
                            </button>
                        </div>
                    </div>

                    @if (encargo.ServiciosPromocionales.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Servicio</th>
                                        <th class="text-end">Precio</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detalle in encargo.ServiciosPromocionales)
                                    {
                                        var servicio = listaServiciosPromocionales.FirstOrDefault(s => s.ServicioPromocionalId == detalle.ServicioPromocionalId);
                                        <tr>
                                            <td>@(servicio?.Nombre ?? "N/A")</td>
                                            <td class="text-endfw-semibold ">RD$ @detalle.PrecioAplicado.ToString("N0")</td>
                                            <td class="text-end">
                                                <button type="button" class="btn btn-sm btn-danger" @onclick="() => EliminarServicio(detalle)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                   
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h4 class="mb-1 fw-bold">Resumen de Costos</h4>
                         
                        </div>
                        <span class="badge badge-orange px-3 py-2 rounded-pill">
                            Pendiente
                        </span>
                    </div>

                    <hr class="my-4">
                    <div class="mb-4">
                        @if (precioBase > 0)
                        {
                            <div class="d-flex justify-content-between align-items-center py-2">
                                <span>Precio base categoría</span>
                                <strong>RD$ @precioBase.ToString("N2")</strong>
                            </div>
                        }

                        @foreach (var detalle in encargo.ServiciosPromocionales)
                        {
                            var servicio = listaServiciosPromocionales.FirstOrDefault(s => s.ServicioPromocionalId == detalle.ServicioPromocionalId);
                            <div class="d-flex justify-content-between align-items-center py-2">
                                <span>@(servicio?.Nombre ?? "Servicio")</span>
                                <strong>RD$ @detalle.PrecioAplicado.ToString("N2")</strong>
                            </div>
                        }

                        @if (tarifaPeriodista > 0)
                        {
                            <div class="d-flex justify-content-between align-items-center py-2">
                                <span>Tarifa periodista</span>
                                <strong>RD$ @tarifaPeriodista.ToString("N2")</strong>
                            </div>
                        }
                    </div>

                    <hr class="my-3">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0 fw-bold">Total</h5>
                        <h4 class="mb-0 fw-bold text-success">RD$ @((precioBase + totalServicios + tarifaPeriodista).ToString("N2"))</h4>
                    </div>

                   
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-orange" @onclick="EnviarEncargo">
                            <i class="bi bi-send me-2"></i>Enviar Encargo
                        </button>
                        <button type="button" class="btn btn-green">
                            <i class="bi bi-save me-2"></i>Guardar Borrador
                        </button>
                        <a href="/institucion/encargos" class="btn btn-secondary">
                            <i class="bi bi-x me-2"></i>Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private EncargoArticulo encargo = new();
    private List<Categoria> listaCategorias = new();
    private List<Periodista> listaPeriodistas = new();
    private List<ServicioPromocional> listaServiciosPromocionales = new();
    
    private string errorMessage = string.Empty;
    private int servicioSeleccionadoId = 0;
    private int institucionIdActual = 0;
    
    private decimal precioBase;
    private decimal totalServicios;
    private decimal tarifaPeriodista;
    private string categoriaNombre = string.Empty;
    private string nombrePeriodista = string.Empty;

    private int selectedCategoriaId
    {
        get => encargo.CategoriaId;
        set
        {
            encargo.CategoriaId = value;
            RecalcularTotales();
        }
    }

    private int selectedPeriodistaId
    {
        get => encargo.PeriodistaId;
        set
        {
            encargo.PeriodistaId = value;
            RecalcularTotales();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        listaCategorias = await CategoriaService.Listar();
        listaPeriodistas = await PeriodistaService.Listar();
        listaServiciosPromocionales = await ServicioPromocionalService.Listar();

        if (AuthenticationStateProvider != null)
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                var institucionIdClaim = user.FindFirst("InstitucionId");
                if (institucionIdClaim != null && int.TryParse(institucionIdClaim.Value, out int instId))
                {
                    institucionIdActual = instId;
                }
                else
                {
                    var email = user.FindFirst(ClaimTypes.Email)?.Value;
                    if (!string.IsNullOrEmpty(email))
                    {
                        var appUser = await UserManager.FindByEmailAsync(email);
                        if (appUser?.InstitucionId != null)
                        {
                            institucionIdActual = appUser.InstitucionId.Value;
                        }
                    }
                }
            }
        }
    }

    private void AgregarServicio()
    {
        if (servicioSeleccionadoId <= 0)
        {
            errorMessage = "Debe seleccionar un servicio";
            return;
        }

        var servicio = listaServiciosPromocionales.FirstOrDefault(s => s.ServicioPromocionalId == servicioSeleccionadoId);
        if (servicio == null) return;

        if (encargo.ServiciosPromocionales.Any(s => s.ServicioPromocionalId == servicioSeleccionadoId))
        {
            errorMessage = "Este servicio ya ha sido agregado";
            return;
        }

        encargo.ServiciosPromocionales.Add(new EncargoServicioPromocional
        {
            ServicioPromocionalId = servicioSeleccionadoId,
            PrecioAplicado = servicio.Precio,
            FechaAplicacion = DateTime.Now
        });

        servicioSeleccionadoId = 0;
        errorMessage = string.Empty;
        RecalcularTotales();
    }

    private void EliminarServicio(EncargoServicioPromocional detalle)
    {
        encargo.ServiciosPromocionales.Remove(detalle);
        RecalcularTotales();
    }

    private void RecalcularTotales()
    {
        var categoria = listaCategorias.FirstOrDefault(c => c.CategoriaId == encargo.CategoriaId);
        precioBase = categoria?.PrecioBase ?? 0;
        categoriaNombre = categoria?.Nombre ?? "Sin categoría";

        totalServicios = encargo.ServiciosPromocionales.Sum(s => s.PrecioAplicado);

        var periodista = listaPeriodistas.FirstOrDefault(p => p.PeriodistaId == encargo.PeriodistaId);
        tarifaPeriodista = periodista?.TarifaBase ?? 0;
        nombrePeriodista = periodista?.Nombres ?? string.Empty;
    }

    private async Task EnviarEncargo()
    {
        if (string.IsNullOrWhiteSpace(encargo.TituloSugerido))
        {
            errorMessage = "El título es requerido";
            return;
        }

        if (encargo.CategoriaId == 0)
        {
            errorMessage = "Debe seleccionar una categoría";
            return;
        }

        if (encargo.PeriodistaId == 0)
        {
            errorMessage = "Debe seleccionar un periodista";
            return;
        }

        if (institucionIdActual == 0)
        {
            errorMessage = "Error: No se pudo identificar tu institución";
            return;
        }

        try
        {
            encargo.InstitucionId = institucionIdActual;
            encargo.FechaCreacion = DateTime.Now;
            encargo.Estado = EstadoArticulo.Pendiente;
            
            var guardado = await EncargoService.Guardar(encargo);

            if (guardado)
            {
                NavigationManager.NavigateTo("/institucion/encargos");
            }
            else
            {
                errorMessage = "No se pudo crear el encargo";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }
}
