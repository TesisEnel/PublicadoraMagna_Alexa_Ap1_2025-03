@page "/institucion/encargos-index"
@using PublicadoraMagna.Model
@inject EncargoArticuloService EncargoService
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthProvider
@rendermode InteractiveServer

<PageTitle>Encargos Recibidos</PageTitle>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title">Encargos Recibidos</h5>
            <div>
                <a href="/institucion/encargos/crear" class="btn btn-primary">
                    <i class="bi bi-plus-square"></i> Crear Encargo
                </a>
            </div>
        </div>

        <div class="card-body">

            <div class="row mb-3">
                <div class="col-md-3">
                    <label><strong>Desde</strong></label>
                    <InputDate class="form-control" @bind-Value="desde"></InputDate>
                </div>
                <div class="col-md-3">
                    <label><strong>Hasta</strong></label>
                    <InputDate class="form-control" @bind-Value="hasta"></InputDate>
                </div>
            </div>

            <div class="row align-items-center mb-3">
                <div class="col-md-3">
                    <label><strong>Filtrar por</strong></label>
                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="" selected disabled>Selecciona una opción</option>
                        <option value="Titulo">Título</option>
                        <option value="Periodista">Periodista</option>
                        <option value="Estado">Estado</option>
                    </InputSelect>
                </div>
                <div class="col-md-4 offset-md-5">
                    <label><strong>Búsqueda</strong></label>
                    <div class="input-group">
                        <input class="form-control" placeholder="Buscar..." @bind="ValorFiltro" />
                        <button type="button" class="btn btn-outline-primary bi bi-search" @onclick="Buscar"></button>
                    </div>
                </div>
            </div>

            <table class="table table-hover">
                <thead class="table-striped">
                    <tr>
                        <th>#</th>
                        <th>Fecha</th>
                        <th>Título</th>
                        <th>Categoría</th>
                        <th>Periodista</th>
                        <th>Estado</th>
                        <th>Comentario Rechazo</th>
                        <th>Tipo</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var encargo in EncargosFiltrados)
                    {
                        <tr>
                            <td>@encargo.EncargoArticuloId</td>
                            <td>@encargo.FechaCreacion.ToShortDateString()</td>
                            <td>@encargo.TituloSugerido</td>
                            <td>@encargo.Categoria?.Nombre</td>
                            <td>@encargo.Periodista?.Nombres</td>
                            <td>@encargo.Estado.ToString()</td>
                            <td>@encargo.ComentarioRechazo</td>
                            <td>Encargo</td>
                            <td>
                                <a href="/institucion/encargos/editar/@encargo.EncargoArticuloId" class="btn btn-sm btn-outline-primary bi bi-pencil-square"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

        <div class="card-footer d-flex justify-content-between">
            <span>Conteo: @EncargosFiltrados.Count()</span>
        </div>
    </div>
</div>

@code {
    private List<EncargoArticulo> Encargos = new();
    private List<EncargoArticulo> EncargosFiltrados = new();
    private string Filtro { get; set; }
    private string ValorFiltro { get; set; }
    private DateTime? desde { get; set; }
    private DateTime? hasta { get; set; }
    private int institucionIdActual;

    protected override async Task OnInitializedAsync()
    {
        // Obtener el id de la institución logeada
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated == true)
        {
            var email = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
            if (!string.IsNullOrEmpty(email))
            {
                var appUser = await UserManager.FindByEmailAsync(email);
                if (appUser?.InstitucionId != null)
                    institucionIdActual = appUser.InstitucionId.Value;
            }
        }

        // Cargar encargos de esta institución
        Encargos = await EncargoService.GetLista(e => e.InstitucionId == institucionIdActual);
        EncargosFiltrados = Encargos;
    }

    private void Buscar()
    {
        var prelista = Encargos.AsEnumerable();

        if (desde.HasValue)
            prelista = prelista.Where(e => e.FechaCreacion >= desde.Value);

        if (hasta.HasValue)
            prelista = prelista.Where(e => e.FechaCreacion <= hasta.Value);

        if (!string.IsNullOrWhiteSpace(ValorFiltro) && !string.IsNullOrWhiteSpace(Filtro))
        {
            prelista = Filtro switch
            {
                "Titulo" => prelista.Where(e => e.TituloSugerido.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)),
                "Periodista" => prelista.Where(e => e.Periodista.Nombres.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)),
                "Estado" => prelista.Where(e => e.Estado.ToString().Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)),
                _ => prelista
            };
        }

        EncargosFiltrados = prelista.ToList();
    }
}
